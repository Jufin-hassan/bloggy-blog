<h1>Compose</h1>
<p><%= composeContent %> </p>

<form action="/" method="POST">
    <div class="form-group">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" name="postTitle" autocomplete="off" id="">
        <label for="post" class="form-label">Post</label>
        <textarea name="postBody" class="form-control" id="" cols="30" rows="10"></textarea>
    </div>

    <button type="submit" class="btn btn-primary btn-pad">Publish</button>

    
</form>

